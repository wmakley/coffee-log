{{ define "logs/index.tmpl" }}
<!doctype html>
<html lang="en">
<head>
	{{ template "shared/head.tmpl" . }}
	<title>Logs</title>
</head>
<body>
<div class="container">
	<h1>Logs</h1>
	<table class="table table-hover">
		<thead>
		<tr>
			<th>ID</th>
			<th>Name</th>
			<th>Created At</th>
			<th>Updated At</th>
			<th>Actions</th>
		</tr>
		</thead>
		<tbody>
		{{ range .Logs }}
			<tr>
				<td>{{.ID}}</td>
				<td>{{.Name}}</td>
				<td>{{.CreatedAt}}</td>
				<td>{{.UpdatedAt}}</td>
				<td>
					<a href="/logs/{{.ID}}">View Log</a>
				</td>
			</tr>
		{{ end }}
		</tbody>
	</table>
</div>
{{ template "shared/foot.tmpl" . }}
</body>
</html>
{{ end }}
